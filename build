#!/bin/bash
# -*- mode: shell-script -*-
# -----------------------------------------------------------------
# Tangles the org-mode files and even compresses some.

DIR=$(cd `dirname $0`; pwd)
FILES=""

EMACS=${1:-/usr/local/bin/emacs}
EMACS=$(echo $EMACS | sed 's/client//')

if [ ! -e $EMACS ]; then
    EMACS=$(which emacs)
else
    EMACS="$EMACS -a ${1:-/usr/local/bin/emacs}"
fi

mkdir -p ~/.emacs.d/elisp

$EMACS --load "./build.el"
